@{
    ViewData["Title"] = "Sistema de Gestión de Activos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header Principal -->
            <div class="jumbotron bg-primary text-white text-center py-5 mb-4 rounded">
                <div class="container">
                    <h1 class="display-3 fw-bold">
                        <i class="fas fa-laptop me-3"></i>
                        Sistema de Gestión de Activos
                    </h1>
                    <p class="lead fs-4">
                        Diplomado M4 - Practica Modelo de Vista
                    </p>
                    <hr class="my-4 bg-white">
                    <p class="fs-5">
                        Sistema integral para el control y administración de activos empresariales
                    </p>
                </div>
            </div>
        </div>
    </div>


    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-info text-center">
                <h6 class="mb-2">
                    <i class="fas fa-graduation-cap me-2"></i>
                    <strong>Proyecto Académico</strong>
                </h6>
                <p class="mb-0">
                    Desarrollado como parte del Diplomado M4 - Modelo de Vista
                </p>
                <p class="mb-0">
                    Crear la BD "IndigoBasic" y Ejecutar Script en la carpeta "ScriptDB" para generar tablas y datos de prueba.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Agregar Font Awesome para los iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .jumbotron {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
    }
    
    .card {
        transition: transform 0.2s ease-in-out;
        border: none;
        border-radius: 10px;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }
    
    .btn {
        border-radius: 25px;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
</style>

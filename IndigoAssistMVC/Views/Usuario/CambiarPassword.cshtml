@model IndigoAssistMVC.ViewModels.CambiarPasswordViewModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-key"></i> Cambiar Contraseña</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a Usuarios
                </a>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Usuario: @Model.UserName</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CambiarPassword" method="post">
                        <input asp-for="UsuarioId" type="hidden" />
                        <input asp-for="UserName" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NuevaPassword" class="form-label"></label>
                                    <input asp-for="NuevaPassword" class="form-control" type="password" />
                                    <span asp-validation-for="NuevaPassword" class="text-danger"></span>
                                    <div class="form-text">
                                        La contraseña debe tener al menos 6 caracteres.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ConfirmarPassword" class="form-label"></label>
                                    <input asp-for="ConfirmarPassword" class="form-control" type="password" />
                                    <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="ForzarCambioEnProximoLogin" class="form-check-input" />
                                        <label asp-for="ForzarCambioEnProximoLogin" class="form-check-label"></label>
                                    </div>
                                    <div class="form-text">
                                        Si está marcado, el usuario deberá cambiar su contraseña en el próximo login.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Advertencia:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Esta acción cambiará inmediatamente la contraseña del usuario</li>
                                <li>El usuario será notificado del cambio</li>
                                <li>Asegúrese de comunicar la nueva contraseña al usuario</li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-key"></i> Cambiar Contraseña
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
